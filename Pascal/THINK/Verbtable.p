unit Verbtable;interface	uses		Stack;{ This unit is here because there's a 32k limit on local variables at any given level. }	const		VT_SIZE = 96; { The number of TISBL verbs that can exist }	type{ VerbTable is the table for verbs which are implemented in TISBL and instaled using \verb }		VerbTableEntry = record				name: string;				exec: Stack;			end;		VerbTable = record				top: 0..VT_SIZE;				entries: array[1..VT_SIZE] of VerbTableEntry;			end;		PVerbTable = ^VerbTable;		HVerbTable = ^PVerbTable;	var		vt: HVerbTable;	procedure initVerbTable;implementation	procedure initVerbTable;		var			err: OSerr;			h: Handle;	begin		h := NewHandle(sizeof(VerbTable));		vt := HVerbTable(h);	end;end.