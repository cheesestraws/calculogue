unit Trace;interface{ A global variable to see whether to trace stuff }	var		tracebool: boolean;	procedure initTrace;	procedure trace (s: string);	procedure traceOn;	procedure traceOff;	procedure mtraceStart;	procedure mtraceEnd;	procedure mtrace (s: string);implementation	procedure initTrace;	begin		traceOff;	end;	procedure traceOn;	begin		tracebool := true;	end;	procedure traceOff;	begin		tracebool := false;	end;	procedure trace (s: string);	begin		write('[trace] ');		writeln(s);	end;	procedure mtraceStart;	begin		write('[trace] ');	end;	procedure mtraceEnd;	begin		writeln;	end;	procedure mtrace (s: string);	begin		write(s);		write(' ');	end;end.